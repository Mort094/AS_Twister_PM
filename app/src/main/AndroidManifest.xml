<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.twister_pm">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Twister_PM"
        android:usesCleartextTraffic="true">
        <activity android:name=".DeleteCommentActivity"></activity>
        <activity
            android:name=".DeleteComment"
            android:label="@string/title_activity_delete_comment"
            android:theme="@style/Theme.Twister_PM.NoActionBar" />
        <activity
            android:name=".CommentActivity"
            android:label="@string/title_activity_comment"
            android:theme="@style/Theme.Twister_PM.NoActionBar" />
        <activity
            android:name=".MessageActivity"
            android:label="@string/title_activity_second"
            android:theme="@style/Theme.Twister_PM.NoActionBar" />
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>